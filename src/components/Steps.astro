---
import GalleryCard from "./GalleryCard.astro";

// Si tienes componentes para las tarjetas de pasos o las imágenes, puedes importarlos aquí
---

<section class="bg-white py-16 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <div class="mb-12">
      <h2 class="text-4xl font-bold text-gray-900 leading-tight sm:text-5xl">Transforma Tus Espacios</h2>
      <h2 class="text-4xl font-bold text-gray-900 leading-tight sm:text-5xl">En Tres Simples Pasos</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
      <div class="flex flex-col items-start text-left">
        <div class="flex items-center space-x-3 mb-4">
          <span class="bg-gray-900 text-white w-8 h-8 flex items-center justify-center rounded-full text-sm font-semibold">01</span>
          <h3 class="text-xl font-bold text-gray-900">Consulta & Concepto</h3>
        </div>
        <p class="text-gray-600 text-base">We collaborate with you to understand your vision and develop a tailored design concept.</p>
      </div>

      <div class="flex flex-col items-start text-left">
        <div class="flex items-center space-x-3 mb-4">
          <span class="bg-gray-200 text-gray-700 w-8 h-8 flex items-center justify-center rounded-full text-sm font-semibold">02</span>
          <h3 class="text-xl font-bold text-gray-900">Diseño & Planificacion</h3>
        </div>
        <p class="text-gray-600 text-base">Our team creates detailed plans, ensuring every element aligns with your style and needs.</p>
      </div>

      <div class="flex flex-col items-start text-left">
        <div class="flex items-center space-x-3 mb-4">
          <span class="bg-gray-200 text-gray-700 w-8 h-8 flex items-center justify-center rounded-full text-sm font-semibold">03</span>
          <h3 class="text-xl font-bold text-gray-900">Ejecucion & Entrega</h3>
        </div>
        <p class="text-gray-600 text-base">We bring your vision to life with precision, delivering a space that exceeds expectations.</p>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <GalleryCard image="/path-to-image1.jpg" title="Living Room Transformation" description="Designed for Kate Graham" />
      <GalleryCard image="/path-to-image1.jpg" title="Living Room Transformation" description="Designed for Kate Graham" />
      <GalleryCard image="/path-to-image1.jpg" title="Living Room Transformation" description="Designed for Kate Graham" />
    </div>
  </div>
</section>
