---
// Props: image (string), title (string), description (string)
const { image, title, description } = Astro.props;
---

<div class="gallery-card">
  <img src={image} alt={title} class="gallery-card__image" />
  <div class="gallery-card__content">
    <h3 class="gallery-card__title">{title}</h3>
    <p class="gallery-card__description">{description}</p>
  </div>
</div>

<style>
  .gallery-card {
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    background: #fff;
    max-width: 320px;
    transition: box-shadow 0.2s;
  }
  .gallery-card:hover {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }
  .gallery-card__image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    display: block;
  }
  .gallery-card__content {
    padding: 1rem;
  }
  .gallery-card__title {
    margin: 0 0 0.5rem 0;
    font-size: 1.2rem;
    font-weight: 600;
  }
  .gallery-card__description {
    margin: 0;
    color: #555;
    font-size: 1rem;
  }
</style>
